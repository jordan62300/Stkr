{% extends 'base.html.twig' %}


{% block body %}
	<div class="container">
		<h1>Connexion</h1>
		<form action="{{ path('security_login')}}" method="post">
			<div class="form-group">
				<input required placeholder="Nom d'utilisateur..." name="_username" type="text" class="form-control">
			</div>
            <div class="form-group">
				<input required placeholder="Mot de passe..." name="_password" type="password" class="form-control">
			</div>
            <button type="submit" class="btn btn-sucess">Se connecter</button>
		</form>
	</div>
{% endblock %}
